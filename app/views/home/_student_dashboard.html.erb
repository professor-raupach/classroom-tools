<%# app/views/home/_student_dashboard.html.erb %>
<h1 class="mb-3">Welcome</h1>
<p class="text-muted">Here are your enrolled courses and today’s sessions.</p>

<%= render "home/tiles" do %>
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-header">My Courses</div>
      <div class="card-body">
        <% if courses.present? %>
          <ul class="list-group list-group-flush">
            <% courses.each do |c| %>
              <li class="list-group-item"><strong><%= c.title %></strong></li>
            <% end %>
          </ul>
        <% else %>
          <p class="mb-0">You are not enrolled in any courses yet.</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-header">Today</div>
      <div class="card-body">
        <% if today_sessions.present? %>
          <ul class="list-group list-group-flush">
            <% today_sessions.each do |s| %>
              <li class="list-group-item">
                <strong><%= s.course.title %></strong> — <%= s.date&.strftime("%a %b %-d") %>
                <% if s.course.start_time %>, <%= s.course.start_time.strftime("%-I:%M %p") %><% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="mb-0">No sessions today.</p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
