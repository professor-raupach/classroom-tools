  <div class="mt-4">
    <%= button_to "Leave Queue",
                  student_help_request_path(@help_request, help_queue_id: @help_queue),
                  method: :delete,
                  data: { confirm: "Are you sure you want to leave the help queue?" },
                  class: "btn btn-outline-danger" %>
  </div>
</div>
